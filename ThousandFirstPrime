
public class ThousandFirstPrime {

  public static void main(String [] args){
		
		long NUMBER = 1;
		int numberofprimes = 0;
		int counter = 0;
		
		for (NUMBER = 2; numberofprimes <= 10001; NUMBER ++) {
			for (int i = 1; i <= NUMBER; i++) {
				
				if (NUMBER % i == 0) {
					
					++counter;
					

				}else continue;

				}
			if (counter > 2) {
				counter = 0;
			} else {
				counter = 0;
				System.out.println(NUMBER + " is prime");
				++numberofprimes;

			}
		}
		System.out.println(numberofprimes + " primes found");
		
	}
	
}
